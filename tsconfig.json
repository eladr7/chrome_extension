{
  "compilerOptions": {
    "sourceMap": false,
    "target": "ES6",
    "esModuleInterop": true,
    "module": "ESNext",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "rootDir": "src",
    "moduleResolution": "bundler",
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}